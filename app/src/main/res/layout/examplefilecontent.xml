<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".YourActivity">

        <!-- ScrollView para permitir desplazamiento -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Nombre archivo -->
                <TextView
                    android:id="@+id/textViewFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Nombre de ejemplo"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Fecha creación -->
                <TextView
                    android:id="@+id/textViewFileCreationDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="22/07/2024" />

                <!-- Imagen del archivo -->

                <!-- Texto extraído (editable) -->
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="350dp"
                    android:layout_height="500dp"
                    app:srcCompat="@drawable/fotodeejemplo" />
                <EditText
                    android:id="@+id/fileContentEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@android:drawable/edit_text"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:padding="8dp"
                    android:text="RODOLFO ALEJANDRO MÁRQUEZ MASQUIARÁN, Analista de Desarrollo Organizacional, certifica que el Sr(a). CLAUDIO FELIPE NUÑEZ DIAZ, R.U.N.:20779198-9, alumno de la Carrera Ingeniería en Informática impartida en Universidad Técnica Federico Santa Maria, realizó su PRÁCTICA profesional en la ÁREA PREVENCIÓN OPERATIVA, a contar del 09-01-2023 hasta 03-03-2023, en ENAP REFINERIAS S.A., REFINERIA BIO BIO."
                    android:textSize="16sp" />



                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/fotodeejemplo" />

            </LinearLayout>
        </ScrollView>

        <!-- Contenedor de botones en la parte inferior -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/save" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>