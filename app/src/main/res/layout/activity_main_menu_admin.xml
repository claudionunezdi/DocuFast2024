<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.mainmenu.View.MainMenuActivity">

    <Button
        android:id="@+id/btnViewGroups"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:text="Ver Grupos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnViewUsers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Ver Usuarios"
        app:layout_constraintBottom_toTopOf="@+id/btnRegisterNewUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViewGroups" />

    <Button
        android:id="@+id/btnRegisterNewUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Nuevo Usuario"
        app:layout_constraintTop_toBottomOf="@+id/btnViewUsers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>